<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="19.7dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/homeimage"
        android:src="@drawable/homeimg"
        android:scaleType="fitXY"
        app:riv_corner_radius="10dp"
        android:layout_width="80dp"
        android:elevation="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="125dp"/>

    <customfonts.MyTextView_Roboto_Medium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jurassic World"
        android:id="@+id/hometext1"
        android:layout_marginBottom="5.2dp"
        android:textSize="10.6sp"/>


    <customfonts.MyTextView_Roboto_Light
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1h 12m"
        android:id="@+id/hometext2"
        android:textSize="10.6sp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>